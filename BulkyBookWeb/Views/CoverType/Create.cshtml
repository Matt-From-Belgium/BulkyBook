@model CoverType

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Cover type</h2>
            <hr/>
        </div>
        <div class="text-danger" asp-validation-summary="All">

        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>&nbsp;
        <a class="btn btn-primary" asp-action="Index" style="width:150px">Back to list</a>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
