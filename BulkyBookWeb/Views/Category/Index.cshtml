
@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index Category</h1>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn-primary btn"><i class="bi bi-plus-circle"></i> Create new category</a>
            
        </div>
    </div>
</div>
<br/><br/>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Category Name</th><th>Display order</th><th>Links</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var category in Model)
        {
            <tr>
                <td width=50%>
                @category.Name
                </td>
                <td width=50%>
                    @category.DisplayOrder
                </td>
                <td>
                    <div class="w-150 btn-group" role="group">
                        <a class="btn btn-primary" style="width:100px" asp-action="Edit" asp-route-id=@category.Id><i class="bi bi-pencil-square"></i>&nbsp; Edit</a>&nbsp;
                        <a class="btn btn-danger" style="width:100px" asp-action="Delete" asp-route-id=@category.Id><i class="bi bi-trash"></i>&nbsp; Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>