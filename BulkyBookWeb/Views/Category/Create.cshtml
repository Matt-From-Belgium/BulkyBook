@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input class="form-control" asp-for="DisplayOrder" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>&nbsp;
        <a class="btn btn-primary" asp-controller="Category" asp-action="Index" style="width:150px">Back to list</a>
    </div>
</form>